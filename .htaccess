# LWS Redirect Rules for Shanon Technologies
# Similar to Cloudflare Workers Routes redirects

# Enable rewrite engine
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Redirect www.shanon-technologies.com to dev.shanon-technologies.com
  # Preserves path and query string
  RewriteCond %{HTTP_HOST} ^www\.shanon-technologies\.com$ [NC]
  RewriteRule ^(.*)$ https://dev.shanon-technologies.com%{REQUEST_URI} [R=301,L]
  
  # Force HTTPS
  RewriteCond %{HTTPS} off
  RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]
</IfModule>

# Alternative: If mod_rewrite is not available, use Redirect directive
# Redirect 301 / https://dev.shanon-technologies.com/

